
# Étape 1 : choisir une image de base Java 17 portable
FROM openjdk:17-jdk-slim

# Étape 2 : définir le dossier de travail
WORKDIR /app

# Étape 3 : copier le jar généré
COPY target/ams_devops-0.0.1-SNAPSHOT.jar app.jar

# Étape 4 : exposer le port
EXPOSE 8080

# Étape 5 : démarrer Spring Boot
ENTRYPOINT ["java","-jar","app.jar"]